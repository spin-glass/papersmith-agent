# Papersmith Agent Configuration Template
# Copy this file to .env and configure your settings

# ============================================
# Backend Configuration
# ============================================
# LLM backend: gemini, openai, local-cpu, local-mlx, local-cuda
LLM_BACKEND=gemini

# Embedding backend: gemini, openai, local-cpu, local-mlx, local-cuda
EMBEDDING_BACKEND=gemini

# ============================================
# External API Keys
# ============================================
# Google Gemini API Key (free tier available)
GOOGLE_API_KEY=

# OpenAI API Key (optional)
OPENAI_API_KEY=

# ============================================
# Storage Paths
# ============================================
# Chroma vector database persistent storage
CHROMA_PERSIST_DIR=/app/data/chroma

# PDF cache directory
PDF_CACHE_DIR=/app/cache/pdfs

# Metadata cache directory
METADATA_CACHE_DIR=/app/cache/metadata

# Model cache directory (for downloaded HuggingFace models)
MODEL_CACHE_DIR=/app/models

# ============================================
# Model Configuration (for local backends)
# ============================================
# LLM model name (HuggingFace model ID for local backends)
LLM_MODEL_NAME=elyza/Llama-3-ELYZA-JP-8B

# Embedding model name (HuggingFace model ID for local backends)
EMBEDDING_MODEL_NAME=intfloat/multilingual-e5-base

# Gemini model name (for gemini backend)
GEMINI_MODEL_NAME=gemini-1.5-flash

# OpenAI model name (for openai backend)
OPENAI_MODEL_NAME=gpt-4o-mini

# OpenAI embedding model (for openai backend)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# RAG Configuration
# ============================================
# Chunk size for text splitting
CHUNK_SIZE=512

# Number of top results to retrieve
TOP_K=5

# Support score threshold for corrective retrieval
SUPPORT_THRESHOLD=0.6

# ============================================
# API Configuration
# ============================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# API host
API_HOST=0.0.0.0

# API port
API_PORT=8000

# ============================================
# UI Configuration
# ============================================
# Papersmith API URL (for UI to connect to API)
# Use http://localhost:8000 for local development
# Use http://papersmith-api:8000 for Docker Compose
PAPERSMITH_API_URL=http://localhost:8000

# UI port
UI_PORT=8501

# ============================================
# External API Configuration (Optional)
# ============================================
# arXiv API settings
ARXIV_MAX_RESULTS=10

# CrossRef API email (for polite pool access)
CROSSREF_EMAIL=

# Semantic Scholar API key (optional, for higher rate limits)
SEMANTIC_SCHOLAR_API_KEY=
